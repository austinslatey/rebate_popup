{%- unless settings.catalogue_mode -%}
      {%- if sale_on -%}
        <div class="tt-price">
          <span class="new-price">{{ pr_variant.price | money }}</span
          ><span class="old-price">{{ pr_variant.compare_at_price | money }}</span>
        </div>
      {%- else -%}
        <div class="tt-price">
          <span>{{ pr_variant.price | money }}</span><span class="old-price hide"></span>
        </div>
      {%- endif -%}
      {% capture current_date %}{{ 'now' | date: '%s' }}{% endcapture %}
      {% capture start_date %}{{ '2025-09-10' | date: '%s' }}{% endcapture %}
      {% capture end_date %}{{ '2025-11-15' | date: '%s' | plus: 86399 }}{% endcapture %}
      {% if current_date >= start_date and current_date <= end_date %}
        {% assign target_collection = collections['superwinch-rebate-2025'] %}
        {% if product.collections contains target_collection
          and product.metafields.custom.cash_back_rebate_amount != blank
        %}
          <a
            href="{{ 'Superwinch-rebate-form.pdf' | file_url }}"
            target="_blank"
            class="cashback-notice"
            style="color: #2a2a2a; font-size: 12px; background-color: #e6f3ff; border-radius: 4px; padding: 6px 10px; margin: 5px 0; text-align: center; font-weight: 500; display: block; text-decoration: none;"
          >
            Cash Back Rebate: {{ product.metafields.custom.cash_back_rebate_amount | times: 100 | money }}
          </a>
        {% endif %}
      {% endif %}
    {%- endunless -%}